<Window x:Class="SAE201.commanderDemande"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Détails de la Demande" Height="450" Width="650" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFFFDFDF" Margin="0,0,0,-6">
        <TextBox Text="{Binding NumDemande}" Margin="82,50,368,320" IsReadOnly="True" Width="150" Height="20"/>
        <Label Content="Numéro de la demande" Margin="114,45,400,365" Height="30" Width="135"/>
        <TextBox Text="{Binding NumVin}" Margin="368,50,82,320" IsReadOnly="True" Width="150" Height="20"/>
        <Label Content="Numéro du vin" Margin="423,45,137,365" Height="30" Width="90"/>
        <TextBox Text="{Binding NumEmploye}" Margin="82,125,368,245" IsReadOnly="True" Width="150" Height="20"/>
        <Label Content="Numéro de l'employé" Margin="120,120,406,290" Height="30" Width="125"/>
        <TextBox Text="{Binding NumCommande}" Margin="368,125,82,245"  IsReadOnly="True" Width="150" Height="20"/>
        <Label Content="Numéro de la commande" Margin="396,120,110,290" Height="30" Width="145"/>
        <TextBox Text="{Binding NumClient}" Margin="82,201,368,169" IsReadOnly="True" Width="150" Height="20" />
        <Label Content="Numéro du client" Margin="130,196,416,214" Height="30" Width="105"/>
        <TextBox Text="{Binding DateDemande}" Margin="368,200,82,170" IsReadOnly="True" Width="150" Height="20" />
        <Label Content="Date de la demande" Margin="408,196,122,214" Height="30" Width="120"/>
        <TextBox Text="{Binding QuantiteDemande}" Margin="82,275,368,90" IsReadOnly="True" Width="150" Height="20"/>
        <Label Content="Quantité de la demande" Margin="112,273,398,137" Height="30" Width="140"/>
        <TextBox Text="{Binding Accepter}" Margin="368,275,82,95" Width="150" Height="20"/>
        <Label Content="Etat de la demande" Margin="410,270,124,140" Height="30" Width="116"/>
        <Button x:Name="butAnnuler" Content="Annuler" Width="130" Height="31" Background="#FFEEACAC" Margin="378,331,92,28" Click="butAnnuler_Click" />
        <Button x:Name="butCommander" Content="Commander" Width="130" Height="31" Background="#FFEEACAC" Margin="92,331,378,28" />
    </Grid>
</Window>