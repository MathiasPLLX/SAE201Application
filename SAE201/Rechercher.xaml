<Window x:Name="windowRechercher" x:Class="SAE201.Rechercher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE201"
        mc:Ignorable="d"
        Title="Rechercher" Height="720" Width="1280" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="572" VerticalAlignment="Top" Width="1280" Fill="#FFFFDFDF" Margin="0,132,0,0"/>
        <Rectangle HorizontalAlignment="Center" Height="132" VerticalAlignment="Top" Width="1280" Fill="#FFE5AEAE"/>
        <Button x:Name="butQuitter" Content="Quitter" HorizontalAlignment="Left" Margin="1079,51,0,0" VerticalAlignment="Top" Width="160" FontSize="20" BorderBrush="Black" Background="#FFFFDFDF" Click="butQuitter_Click"/>
        <Button x:Name="butAccueil" Content="Accueil" HorizontalAlignment="Left" Margin="61,51,0,0" VerticalAlignment="Top" Width="160" FontSize="20" BorderBrush="Black" Background="#FFFFDFDF" Click="butAccueil_Click"/>
        <Label Content="Rechercher" HorizontalAlignment="Center" Height="72" Margin="0,30,0,0" VerticalAlignment="Top" Width="260" FontSize="48" FontWeight="Bold"/>
        <DataGrid x:Name="dgVins" Margin="141,171,329,39" Grid.Column="1" AutoGenerateColumns="False" ItemsSource="{Binding Vins}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Numéro" Width="*" Binding="{Binding NumVin}"/>
                <DataGridTextColumn Header="Nom" Width="*" Binding="{Binding NomVin}"/>
                <DataGridTextColumn Header="Appellation" Width="*" Binding="{Binding NomAppelation}"/>
                <DataGridTextColumn Header="Type" Width="*" Binding="{Binding NomType}"/>
                <DataGridTextColumn Header="Prix" Width="*" Binding="{Binding PrixVin}"/>
                <DataGridTextColumn Header="Millésime" Width="*" Binding="{Binding Millesime}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="butFiltre" Content="&#xE71C;" HorizontalAlignment="Left" Margin="1086,246,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="butFiltre_Click" Background="White" FontFamily="Segoe MDL2 Assets"/>
        <TextBox HorizontalAlignment="Left" Height="31" Margin="986,171,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="253"/>
        <Button Content="Rechercher" HorizontalAlignment="Left" Margin="1017,617,0,0" VerticalAlignment="Top" Height="18" Width="222"/>
        <Button x:Name="butAjouter" Content="&#xE948;" HorizontalAlignment="Left" Margin="1086,341,0,0" VerticalAlignment="Top" Width="50" Height="50" Background="White" FontFamily="Segoe MDL2 Assets"/>
        <Button x:Name="butSupprimer" Content="&#xE74D;" HorizontalAlignment="Left" Margin="1086,438,0,0" VerticalAlignment="Top" Width="50" Height="50" Background="White" FontFamily="Segoe MDL2 Assets"/>
        <Button x:Name="butModifier" Content="&#xE70F;" HorizontalAlignment="Left" Margin="1086,535,0,0" VerticalAlignment="Top" Width="50" Height="50" Background="White" FontFamily="Segoe MDL2 Assets"/>

    </Grid>
</Window>
