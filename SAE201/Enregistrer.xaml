<Window x:Name="windowEnregistrer" x:Class="SAE201.Enregistrer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE201"
        mc:Ignorable="d"
        Title="Enregistrer" Height="450" Width="650" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="434" VerticalAlignment="Center" Width="650" Fill="#FFFFDFDF"/>
        <Button x:Name="butAnnuler" Content="Annuler" HorizontalAlignment="Left" Margin="437,342,0,0" VerticalAlignment="Top" Width="160" FontSize="20" BorderBrush="Black" Background="#FFE5AEAE" Click="butAnnuler_Click"/>
        <Label Content="Numéro d'employé" HorizontalAlignment="Left" Margin="18,20,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="textBoxNumEmploye" HorizontalAlignment="Left" Margin="18,62,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300" Height="25"/>
        <Label Content="Prix" HorizontalAlignment="Left" Margin="18,112,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="textBoxPrix" HorizontalAlignment="Left" Margin="18,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300" Height="25"/>
        <Button x:Name="butValider" Content="Valider" HorizontalAlignment="Left" Margin="51,342,0,0" VerticalAlignment="Top" Width="164" Height="30" FontSize="20" Click="butValider_Click" Background="#FFE5AEAE"/>
        <Button x:Name="butMettreEnAttente" Content="Mettre en attente" HorizontalAlignment="Center" Margin="0,342,0,0" VerticalAlignment="Top" Width="164" Height="30" FontSize="20" Click="butMettreEnAttente_Click" Background="#FFE5AEAE"/>
    </Grid>
</Window>
