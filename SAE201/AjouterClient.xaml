<Window x:Class="SAE201.AjouterClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE201"
        mc:Ignorable="d"
        Title="AjouterClient" Height="350" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="245" VerticalAlignment="Top" Width="300" Fill="#FFFFDFDF" Margin="0,89,0,0"/>
        <Rectangle HorizontalAlignment="Center" Height="89" VerticalAlignment="Top" Width="300" Fill="#FFE5AEAE"/>
        <Label Content="Ajout d'un client" HorizontalAlignment="Center" Height="43" Margin="0,24,0,0" VerticalAlignment="Top" Width="208" FontSize="25" FontWeight="Bold"/>

        <StackPanel Margin="0,70,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Numéro client"/>
            <TextBox x:Name="textNumClient" TextWrapping="Wrap" Text="Automatique" HorizontalContentAlignment="Center" Width="180" HorizontalAlignment="Center" IsReadOnly="True"/>
            <Label Content="Nom"/>
            <TextBox x:Name="textNomClient" TextWrapping="Wrap" Text="" Width="180" HorizontalAlignment="Center"/>
            <Label Content="Prénom"/>
            <TextBox x:Name="textPrenomClient" TextWrapping="Wrap" Text="" Width="180"/>
            <Label Content="Adresse email"/>
            <TextBox x:Name="textAdresseMail" TextWrapping="Wrap" Text="" Width="180" HorizontalAlignment="Center"/>
            <Button x:Name="butValiderClient" Content="Valider" Margin="0,15,0,0" Click="butValiderClient_Click"/>

        </StackPanel>
    </Grid>
</Window>
