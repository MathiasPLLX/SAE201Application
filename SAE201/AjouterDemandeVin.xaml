<Window x:Class="SAE201.AjouterDemandeVin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE201"
        mc:Ignorable="d"
        Title="AjouterDemandeVin" Height="350" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="245" VerticalAlignment="Top" Width="300" Fill="#FFFFDFDF" Margin="0,89,0,0"/>
        <Rectangle HorizontalAlignment="Center" Height="89" VerticalAlignment="Top" Width="300" Fill="#FFE5AEAE"/>
        <Label Content="Ajout d'une demande" HorizontalAlignment="Center" Height="43" Margin="0,28,0,0" VerticalAlignment="Top" Width="266" FontSize="25" FontWeight="Bold"/>

        <StackPanel Margin="0,70,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Numéro vin"/>
            <TextBox x:Name="textNumVin" TextWrapping="Wrap" Text="" Width="180" HorizontalAlignment="Center" IsReadOnly="True"/>
            <Label Content="Numéro client"/>
            <TextBox x:Name="textNumClient" TextWrapping="Wrap" Text="" Width="180" HorizontalAlignment="Center"/>
            <Label Content="Numéro employé"/>
            <TextBox x:Name="textNumEmploye" TextWrapping="Wrap" Text="" Width="180"/>
            <Label Content="Quantité"/>
            <TextBox x:Name="textQuantite" TextWrapping="Wrap" Text="" Width="180" HorizontalAlignment="Center"/>
            <Button x:Name="butValiderDemande" Content="Valider" Margin="0,15,0,0" Click="butValiderDemande_Click"></Button>

        </StackPanel>

    </Grid>
</Window>
